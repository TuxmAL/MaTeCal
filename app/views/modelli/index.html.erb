<h1>Elenco dei modelli</h1>

<table>
  <tr>
    <th>Descrizione</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @modelli.each do |modello| %>
  <tr>
    <td><%= modello.descrizione %></td>
    <td><%= link_to 'Mostra', modello %></td>
    <td><%= link_to 'Modifica', edit_modello_path(modello) %></td>
    <td><%= link_to 'Elimina', modello, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuovo Modello', new_modello_path %>
