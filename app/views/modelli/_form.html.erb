<%= form_for(@modello) do |f| %>
  <% if @modello.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@modello.errors.count, "error") %> non ha permesso di salvare questo modello:</h2>

      <ul>
      <% @modello.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descrizione, "Descrizione:" %>
    <%= f.text_field :descrizione, :size => 50, :maxlenght => 35, :alt => "Inserisci una descrizione per il modello",
        :placeholder => "lupetto, polo, bermuda, etc." %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
