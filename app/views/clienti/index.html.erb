  <tr>
    <th>Ragione sociale</th>
    <th>Via</th>
    <th>Citta</th>
    <th>Provincia</th>
    <th>Cap</th>
    <th>Telefono1</th>
    <th>Telefono2</th>
    <th>Telefono3</th>
