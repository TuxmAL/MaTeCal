<% @clienti.each do |cliente| %>
  <tr>
    <td><%= cliente.ragione_sociale %></td>
    <td><%= cliente.via %></td>
    <td><%= cliente.citta %></td>
    <td><%= cliente.provincia %></td>
    <td><%= cliente.cap %></td>
    <td><%= cliente.telefono1 %></td>
    <td><%= cliente.telefono2 %></td>
    <td><%= cliente.telefono3 %></td>
    <td><%= cliente.fax %></td>
    <td><%= cliente.email %></td>
    <td><%= cliente.codfis_piva %></td>
    <td><%= cliente.banca %></td>
    <td><%= cliente.agenzia %></td>
    <td><%= cliente.iban %></td>
    <td><%= cliente.note %></td>
    <td><%= link_to 'Show', cliente %></td>
    <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
    <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
