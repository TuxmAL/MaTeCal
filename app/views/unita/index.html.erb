<table>
  <tr>
    <th>Unità</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @unita.each do |u| %>
  <tr>
    <td><%= u.unita %></td>
    <td><%= link_to 'Mostra', u %></td>
    <td><%= link_to 'Modifica', edit_unita_path(u) %></td>
